FROM ubuntu:16.04
RUN touch /bin/irpf-2020; \
    echo "#!/usr/bin/env bash" > /bin/irpf-2020; \
    echo "[ ! -d /usr/local/IRPF2020/ ] && echo ERRO && exit 2" >> /bin/irpf-2020; \
    echo "/usr/bin/java -Xms128M -Xmx512M -jar /usr/local/IRPF2020/irpf.jar" >> /bin/irpf-2020; \
    chmod u+x /bin/irpf-2020; \
    apt-get update; \
    apt-get install -y openjdk-8-jdk; \
    apt-get install -y wget zip; \
    wget http://downloadirpf.receita.fazenda.gov.br/irpf/2020/irpf/arquivos/IRPF2020-2.1.zip; \
    cd /usr/local/; \
    unzip /IRPF2020-2.1.zip; \
    rm /IRPF2020-2.1.zip; \
    mkdir /root/shared; \
    apt-get purge; \
    apt-get clean
